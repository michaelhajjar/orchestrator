%post
yum update -y
yum install -y sudo
echo "ansible_provisioner        ALL=(ALL)       NOPASSWD: ALL" >> /etc/sudoers.d/ansible_provisioner
sed -i "s/^.*requiretty/#Defaults requiretty/" /etc/sudoers
yum clean all

/bin/mkdir /home/ansible_provisioner/.ssh
/bin/chmod 700 /home/ansible_provisioner/.ssh
/bin/echo -e 'ssh-rsa  insecure public key' > /home/ansible_provisioner/.ssh/authorized_keys
/bin/chown -R ansible_provisioner:ansible_provisioner /home/ansible_provisioner/.ssh
/bin/chmod 0400 /home/ansible_provisioner/.ssh/*

%end